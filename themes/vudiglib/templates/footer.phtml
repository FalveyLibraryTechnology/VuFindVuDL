<script>
    (function() {
        // Window too small
        if (window.innerHeight * 2 > document.documentElement.scrollHeight) {
            return;
        }

        const toTopBtn = document.querySelector(".to-top-btn");

        function toggleButton(entries) {
            const searchbar = entries[0];
            if (!searchbar.isIntersecting) { // searchbox not visible
                toTopBtn.classList.add("is-active");
            } else {
                toTopBtn.classList.remove("is-active");
            }
        };

        const headerObserver = new IntersectionObserver(toggleButton, {
            root: null, // Declaring null uses the entire viewport.
            threshold: 0, //  The percentage of the header to come into view.
        });

        headerObserver.observe(document.getElementById("searchForm_lookfor"));
    })();
</script>
