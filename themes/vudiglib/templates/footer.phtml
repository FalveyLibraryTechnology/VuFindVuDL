<script>
    // Callback function to execute when mutations are observed
    function addLinkRoots(mutationList, observer) {
        const subLinks = document.querySelectorAll(".nav-link-anchor,.subnav-link,.subnav-header,.footer-section a");

        if (subLinks.length === 0) {
            return;
        }

        subLinks.forEach((link) => {
            const href = link.getAttribute("href");

            if (href.startsWith("/")) {
                link.setAttribute("href", "https://library.villanova.edu" + href);
            }
        });

        // Later, you can stop observing
        observer.disconnect();
    };
    // Create an observer instance linked to the callback function
    const observer = new MutationObserver(addLinkRoots);

    // Select the node that will be observed for mutations
    const targetNode = document.getElementById('falvey-nav');
    // Options for the observer (which mutations to observe)
    const config = { childList: true };
    // Start observing the target node for configured mutations
    observer.observe(targetNode, config);
</script>

